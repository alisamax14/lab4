#include <stdio.h>
#include <stdlib.h>
#include <limits.h>

// Функция для чтения матрицы из файла
int** read_matrix_from_file(const char* filename, int* n, int* m) {
    FILE* file = fopen(filename, "r");
    if (file == NULL) {
        printf("Ошибка: невозможно открыть файл %s\n", filename);
        return NULL;
    }
    
    // Читаем размеры матрицы
    if (fscanf(file, "%d %d", n, m) != 2) {
        printf("Ошибка: неверный формат файла\n");
        fclose(file);
        return NULL;
    }
    
    // Проверяем корректность размеров
    if (*n <= 0 || *m <= 0) {
        printf("Ошибка: неверные размеры матрицы\n");
        fclose(file);
        return NULL;
    }
    
    // Выделяем память для указателей на строки матрицы
    int** matrix = (int**)malloc(*n * sizeof(int*));
    if (matrix == NULL) {
        printf("Ошибка: не удалось выделить память для матрицы\n");
        fclose(file);
        return NULL;
    }
    
    // Выделяем память для каждой строки матрицы
    for (int i = 0; i < *n; i++) {
        matrix[i] = (int*)malloc(*m * sizeof(int));
        if (matrix[i] == NULL) {
            printf("Ошибка: не удалось выделить память для строки %d матрицы\n", i);
            fclose(file);
            // Освобождаем уже выделенную память
            for (int k = 0; k < i; k++) {
                free(matrix[k]);
            }
            free(matrix);
            return NULL;
        }
    }
    
    // Читаем элементы матрицы
    for (int i = 0; i < *n; i++) {
        for (int j = 0; j < *m; j++) {
            if (fscanf(file, "%d", &matrix[i][j]) != 1) {
                printf("Ошибка: неверный формат данных в файле\n");
                fclose(file);
                // Освобождаем память
                for (int k = 0; k < *n; k++) {
                    free(matrix[k]);
                }
                free(matrix);
                return NULL;
            }
        }
    }
    
    fclose(file);
    return matrix;
}

// Функция для вывода матрицы
void print_matrix(int** matrix, int n, int m) {
    printf("Матрица %dx%d:\n", n, m);
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            printf("%4d ", matrix[i][j]);
        }
        printf("\n");
    }
}

// Функция для освобождения памяти матрицы
void free_matrix(int** matrix, int n) {
    if (matrix != NULL) {
        for (int i = 0; i < n; i++) {
            if (matrix[i] != NULL) {
                free(matrix[i]);
            }
        }
        free(matrix);
    }
}

int main(int argc, char* argv[]) {
    // Проверяем аргументы командной строки
    if (argc != 2) {
        printf("Использование: %s <имя_файла>\n", argv[0]);
        return 1;
    }
    
    int n, m;
    
    // Читаем матрицу из файла
    int** matrix = read_matrix_from_file(argv[1], &n, &m);
    if (matrix == NULL) {
        return 1;
    }
    
    // Выводим исходную матрицу
    printf("Исходная матрица:\n");
    print_matrix(matrix, n, m);
    printf("\n");
    
    // 1. Находим сумму отрицательных элементов на побочной диагонали
    int sum_negative_secondary = 0;
    int min_size = (n < m) ? n : m; // определяем размер меньшей стороны
    
    for (int i = 0; i < min_size; i++) {
        int j = m - 1 - i; // индекс для побочной диагонали
        if (matrix[i][j] < 0) {
            sum_negative_secondary += matrix[i][j];
        }
    }
    
    printf("1. Сумма отрицательных элементов на побочной диагонали: %d\n", sum_negative_secondary);
    
    // 2. Находим минимальный элемент в 3-ем столбце
    if (m < 3) {
        printf("Ошибка: матрица должна иметь как минимум 3 столбца\n");
        free_matrix(matrix, n);
        return 1;
    }
    
    int min_element = INT_MAX;
    int min_row = -1;
    int col_index = 2; // 3-ий столбец (индексация с 0)
    
    for (int i = 0; i < n; i++) {
        if (matrix[i][col_index] < min_element) {
            min_element = matrix[i][col_index];
            min_row = i;
        }
    }
    
    printf("2. Минимальный элемент в 3-ем столбце: %d (строка %d, столбец %d)\n",min_element, min_row + 1, col_index + 1);
    
    // 3. Меняем местами найденный минимальный элемент и 3-ий элемент в 4-ой строке
    if (n < 4) {
        printf("Ошибка: матрица должна иметь как минимум 4 строки\n");
        free_matrix(matrix, n);
        return 1;
    }
    
    if (m < 3) {
        printf("Ошибка: матрица должна иметь как минимум 3 столбца\n");
        free_matrix(matrix, n);
        return 1;
    }
    
    int row_to_swap = 3; // 4-ая строка (индексация с 0)
    int col_to_swap = 2; // 3-ий элемент (индексация с 0)
    
    printf("3. Меняем местами элементы:\n"); 
    printf("   matrix[%d][%d] = %d и matrix[%d][%d] = %d\n",
           min_row + 1, col_index + 1, matrix[min_row][col_index],
           row_to_swap + 1, col_to_swap + 1, matrix[row_to_swap][col_to_swap]);
    
    // Выполняем обмен
    int temp = matrix[min_row][col_index];
    matrix[min_row][col_index] = matrix[row_to_swap][col_to_swap];
    matrix[row_to_swap][col_to_swap] = temp;
    
    // Выводим матрицу после обмена
    printf("\nМатрица после обмена:\n");
    print_matrix(matrix, n, m);
    
    // Освобождаем память
    free_matrix(matrix, n);
    
    return 0;
}
